<html>
	<head>
		<title>Tumbleweed index</title>
		<link href='./stylesheets/style.css' rel='stylesheet' type='text/css'>
		<!--<link href='http://fonts.googleapis.com/css?family=Lobster+Two:400,400italic' rel='stylesheet' type='text/css'>-->
		<link href='http://fonts.googleapis.com/css?family=Lobster+Two:100,400,400italic|Cabin' rel='stylesheet' type='text/css'>
		<meta charset='UTF-8'>
	
		<script src='./javascripts/jquery-1.11.0.min.js'></script>
		<script type='text/javascript'>
		
			function show_signup() {
				$('#signup-form').fadeIn();
				$('#login-form').hide();
			}
			
			function show_login() {
				$('#login-form').fadeIn();
				$('#signup-form').hide();
			}
		
			$(function() {
				show_signup();
				$('#signup').click(function() {
					$('.error').hide();
					show_signup();
				});
				$('#login').click(function() {
					$('.error').hide();
					show_login();
				});
			});
				
			var scrollSpeed = 70;
			var current = 0;
			var direction = 'h';

			function bgscroll(){
	    		current -= 1;
	    		$('#header').css("backgroundPosition", (direction == 'h') ? current+"px 0" : "0 " + current+"px");
			}		
	
		 setInterval("bgscroll()", scrollSpeed);	
		</script>
	</head>
	<body>
		<div id='header'>
