<html>
<head>
<title>TUMBLEWEED</title>

    <link rel="stylesheet" type="text/css" href="./stylesheets/profile.css" media="all" />
    <link rel="stylesheet" type="text/css" href="./javascripts/collageplus/css/transitions.css" media="all" />
    <link href='http://fonts.googleapis.com/css?family=Cabin:400,700' rel='stylesheet' type='text/css'>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>


    <script src="./javascripts/collageplus/jquery.collagePlus.js"></script>
    <script src="./javascripts/collageplus/extras/jquery.removeWhitespace.js"></script>
    <script src="./javascripts/collageplus/extras/jquery.collageCaption.js"></script>

    <script type="text/javascript">

    // All images need to be loaded for this plugin to work so
    // we end up waiting for the whole window to load in this example
    $(window).load(function () {
        $(document).ready(function(){
            collage();
            $('.Collage').collageCaption();
            $(".Collage").css({"visibility": "visible"});
            $(".loader").hide();
            $('.Collage').hide();
            $('.Collage').fadeIn();
        });
    });


    // Here we apply the actual CollagePlus plugin
    function collage() {
        $('.Collage').removeWhitespace().collagePlus(
            {
                'fadeSpeed'     : 2000,
                'targetHeight'  : 200
            }
        );
    };

    // This is just for the case that the browser window is resized
    var resizeTimer = null;
    $(window).bind('resize', function() {
        // hide all the images until we resize them
        $('.Collage .Image_Wrapper').css("opacity", 0);
        // set a timer to re-apply the plugin
        if (resizeTimer) clearTimeout(resizeTimer);
        resizeTimer = setTimeout(collage, 200);
    });

    </script>
    
</head>
